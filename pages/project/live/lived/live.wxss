.main_scroll{
  width: 750rpx;
  position: fixed;
  top:0;
  bottom: 98rpx;
  box-sizing: border-box;
  /* padding-bottom: 98rpx; */
  background: #f1f1f1;
}

.fix_btm{
  width: 750rpx;
  height: 98rpx;
  background: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 30;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}

.fix_btm input{
  width: 560rpx;
  height: 58rpx;
  background: #e6e6e6;
  padding-left: 20rpx;
  box-sizing: border-box;
  border: none;
  font-size: 28rpx;
  margin-right: 30rpx;
  border-radius: 8rpx;
}
.btn_send{
   width:120rpx;
  height:70rpx;
  line-height:70rpx;
  text-align:center;
  background:#ffa121;
  color:#fff;
  font-size:28rpx;
  border-radius:8rpx;
  margin-right:20rpx;
}
.main_box{
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  /* padding: 0 30rpx; */
  width: 690rpx;
  /* margin: 30rpx 0 60rpx; */
  padding:30rpx;
}
.main_head{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.toggle_scroll .main_box{
  border-bottom: 1px solid #ddd;
}

.toggle_scroll .main_box:last-child{
  border-bottom: none;
}
.main_box image{
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.main_con{
  flex-grow: 1;
  width: 100rpx;
  font-size: 22rpx;
  color:#999;
}

.toggle_content .main_con{
  font-size: 26rpx;
  color: #666;
}
.main_text{
  margin: 15rpx 0;
  font-size: 28rpx;
  color: #282828;
}
.main_date{
  font-size: 22rpx;
  color: #999;
}
.main_audio{
  background: #fff;
  max-width: 400rpx;
  min-height: 80rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
  position: relative;
}
.main_audio::before{
  content:"";
  display: block;
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  position: absolute;
  transform: rotate(45deg) translateY(-50%);
  left:-10rpx;
  top:50%;
  /* margin-top: -10rpx; */
}

.main_audio_img{
  width: 32rpx;
  height: 32rpx;
  padding-top: 24rpx;
  padding-left: 10rpx;
  position: relative;
  z-index: 20;
}

.main_audio_img image{
  width: 32rpx;
  height: 32rpx;
}

.main_audio.active::after{
  content:"";
  display: block;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff5c35;
  position: absolute;
  right:-25rpx;
  top:0;
}
.main_time{
  position: absolute;
  font-size: 22rpx;
  color: #999;
  right: -50rpx;
  bottom:0;
}

.toggle_scroll{
  position: fixed;
  top:100vh;
  left: 0;
  bottom: 98rpx;
  right: 0;
  z-index: 30;
  transition: all .3s ease-out;
}

.toggle_scroll.active{
  top:0;
}

.toggle_scroll.active .toggle_cover{
  background: rgba(0,0,0,.5);
}


.toggle_cover{
  width: 750rpx;
  height: 366rpx;
  background: transparent;
}

.toggle_scroll scroll-view{
  width: 750rpx;
  background: #f1f1f1;
  position: absolute;
  bottom: 0;
  left: 0;
  top:100rpx;
}

.toggle_content{
  position: absolute;
  top:366rpx;
  left: 0;
  width: 750rpx;
  bottom: 0;
}

.toggle_title{
  padding:  30rpx;
  background: #fff;
  font-size: 32rpx;
  color: #282828;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
}
.main_nav_link{
  position: relative;
}
.main_nav_link.active::after{
  content: "";
  display: block;
  position: absolute;
  width: 100%;
  height: 4rpx;
  background: #39bc54;
  bottom: -10rpx;
  left: 0;
}

